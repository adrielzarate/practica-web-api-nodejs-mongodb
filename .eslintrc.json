{
    "env":
    {
        "node": true,
        "commonjs": true,
        "es6": true
    },
    "parserOptions":
    {
        "ecmaVersion": 2017
    },
    "extends": "eslint:recommended",
    "rules":
    {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "strict": [
            "error",
            "global"
        ],
        "no-unused-vars": [
            "error",
            {
                "vars": "all",
                "args": "after-used",
                "argsIgnorePattern": "next"
            }
        ]
    }
}